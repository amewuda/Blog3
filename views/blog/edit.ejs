<%- include ("../partials/header"); %>

<div class="container">
    <div class="align-center">
        <div class="container">
            <div class="text-center">
                <div class="text-info "> 
                    <div class="text-lg">
                        <div class="header"><strong>Edit <%=blog.title%></strong></div>
                    </div> 
                </div>
            </div>
        </div>
        
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="post">
            <div class="container-fluid">
                <div class="form-group">
                    <label for="title">Blog title</label>
                    <input id="title" class="form-control" name="blog[title]" value="<%=blog.title%>">
                </div>
                <div class="form-group">
                    <label for="image">Blog image</label>
                    <input class="form-control" id="image" type="text" name="blog[image]" value="<%=blog.image%>">
                </div>
                <div class="form-group">
                    <label for="body">Blog text or body</label>
                    <textarea id="body" rows="4" class="form-control" type="text" name="blog[body]" value="<%=blog.body%>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </div>
       </form> 
    </div>
</div>
      




<%- include ("../partials/footer"); %>